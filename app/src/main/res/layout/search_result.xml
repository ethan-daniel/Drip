<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searched_name"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="32sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HasDaily"
        android:layout_marginBottom="7dp"
        android:textColor="@color/black"
        android:visibility="visible"
        android:layout_below="@id/searched_name"
        android:text="@string/daily"
        android:layout_marginStart="50dp"
        android:onClick="DailyClicked"
        android:layout_gravity="end"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/HasMonthly"
        android:visibility="visible"
        android:layout_toEndOf="@id/HasDaily"
        android:layout_marginStart="115dp"
        android:layout_below="@id/searched_name"
        android:text="@string/monthly"
        android:onClick="MonthlyClicked"
        android:layout_gravity="start"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:id="@+id/dateText"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:layout_below="@id/HasDaily"
        android:textSize="22sp"
        android:layout_alignLeft="@id/HasDaily"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/storage"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        android:id="@+id/storageText"
        android:textColor="@color/black"
        android:layout_below="@id/HasDaily"
        android:layout_alignLeft="@id/HasMonthly"/>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_alignLeft="@id/HasDaily"
        android:id="@+id/data_table"
        android:layout_below="@id/storageText"
        android:stretchColumns="*">
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error_message"
        android:duplicateParentState="true"
        android:layout_margin="50dp"/>
</RelativeLayout>
</ScrollView>